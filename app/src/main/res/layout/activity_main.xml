<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009952"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mayank.sqlapplication.MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/viewcontacts"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/viewcontacts"
        android:layout_marginTop="87dp"
        android:background="#B2E07A"
        android:onClick="addcontacts"
        android:text="Add Contacts" />

    <Button
        android:id="@+id/viewcontacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button"
        android:layout_marginTop="42dp"
        android:background="#B2E07A"
        android:onClick="showcontacts"
        android:text="View Contacts" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewcontacts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="#B2E07A"
        android:onClick="search"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Search Contacts" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="44dp"
        android:background="#B2E07A"
        android:onClick="updatecontact"
        android:text="Update contacts" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="My Contacts"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp" />
</RelativeLayout>
